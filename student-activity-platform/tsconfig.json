{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "allowJs": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src"]
}
